{
  "name": "xrpl-hooks-app",
  "version": "1.0.0",
  "description": "Set up an XRPL Hooks app by running one command",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint ./client/**/* --ext .ts",
    "format": "npx prettier --write ./client",
    "setup": "make setup",
    "build:hook": "make -B build",
    "set-hook": "make set-hook",
    "build-set-hook": "make build-set-hook",
    "clean": "make clean",
    "xrpl:server-state": "npx ts-node ./client/serverState",
    "app:setup-hook-account": "npx ts-node ./client/app/setupHookAccount"
  },
  "author": {
    "name": "Omar Khan",
    "url": "https://github.com/khancode"
  },
  "license": "ISC",
  "dependencies": {
    "axios": "^1.3.4",
    "crypto-js": "^4.1.1",
    "ripple-address-codec": "^4.2.5",
    "ripple-binary-codec": "^1.4.3",
    "xrpl": "^2.7.0"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/crypto-js": "^4.1.1",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
